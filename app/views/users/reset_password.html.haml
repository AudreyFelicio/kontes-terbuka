- content_for :page_attributes do
  nav-logo-only

.container
  %h1 Reset Password
  = render 'password_help'
  = form_tag process_reset_password_path, class: 'form-inline',
    id: 'reset-password' do
    = hidden_field_tag 'verification', params[:verification]
    = password_field nil, :new_password, class: 'form-control',
      placeholder: 'Password baru'
    = password_field nil, :confirm_new_password, class: 'form-control',
      placeholder: 'Ulangi password baru'
    = submit_tag 'Ganti', class: 'btn'
  #reset-password-errors

<div class="container-fluid">
  <h1>Edit Profil</h1>

  <div class="row">
    <div class="col-md-6">
      <%= form_for :user, url: user_path(@user), method: :patch do |f| %>
        <p>
        <label for="profile_picture">Profile Picture:</label>
        <%= f.file_field :profile_picture, class: "form-control" %>
        </p>
        <p>
        <label for="user_email">Email:</label>
        <%= f.text_field :email, class: "form-control" %>
        </p>
        <p>
        <label for="user_timezone">Zona waktu:</label>
        <%= f.text_field :timezone, class: "form-control" %>
        </p>
        <p>
        <label for="user_fullname">Nama lengkap:</label>
        <%= f.text_field :fullname, class: "form-control" %>
        </p>
        <p>
        <label for="user_province">Provinsi:</label>
        <%= f.collection_select :province_id, Province.all(), :id, :name,
          { prompt: "Provinsi" }, class: "form-control" %>
        </p>
        <p>
        <label for="user_status">Status:</label>
        <%= f.collection_select :status_id, Status.all(), :id, :name,
          { prompt: "Status" }, class: "form-control" %>
        </p>
        <label for="user_color">Warna:</label>
        <%= f.collection_select :color_id, Color.all(), :id, :name,
          { prompt: "Color" }, class: "form-control" %>
        </p>
        <p>
        <label for="user_school">Sekolah/Institusi:</label>
        <%= f.text_field :school, class: "form-control" %>
        </p>
        <p>
        <label for="user_color">Warna website:</label>
        </p>
        <%= f.submit "Ganti", class: "btn btn-default has-shade" %>
      <% end %>
    </div>
  </div>
</div>

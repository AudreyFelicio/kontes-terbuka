<h1> Edit </h1>

<%= form_for :user, url: user_path(@user),method: :patch do |f| %>

	<% if @user.errors.any? %>
    	<div id="error_explanation">
    		<h2>
			<%= pluralize(@user.errors.count, "error") %> prohibited this user from being registered:
			</h2>
			<ul>
			<% @user.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
    	</div>
	<% end %>

	Username: <br>
	<%= f.text_field :username %><br>
	Email: <br>
	<%= f.text_field :email %><br>
	Password: <br>
	<%= f.password_field :password %><br>	
	Ulang password: <br>
	<%= f.password_field :password_confirmation %><br>
	Nama lengkap: <br>
	<%= f.text_field :fullname %><br>
	Provinsi: <br>
	<%= f.text_field :province %><br>
	Status: <br>
	<%= f.text_field :status %><br>
	Sekolah/Institusi: <br>
	<%= f.text_field :school %><br>
	<%= f.submit %>
<% end %>
<%= link_to "Back", users_path %>
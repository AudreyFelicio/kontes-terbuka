<div class="container-fluid">
  <h1>Edit Profil</h1>

  <%= form_for :user, url: user_path(@user), method: :patch do |f| %>

    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@user.errors.count, "error") %> prohibited this user from being registered:
        </h2>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <p>
    <label for="user_username">Username:</label>
    <%= f.text_field :username, class: "form-control" %>
    </p>
    <p>
    <label for="user_email">Email:</label>
    <%= f.text_field :email, class: "form-control" %>
    </p>
    <p>
    <label for="user_password">Password:</label>
    <%= f.password_field :password, class: "form-control" %>	
    </p>
    <p>
    <label for="user_password_confirmation">Ulangi password:</label>
    <%= f.password_field :password_confirmation, class: "form-control" %>
    </p>
    <p>
    <label for="user_fullname">Nama lengkap:</label>
    <%= f.text_field :fullname, class: "form-control" %>
    </p>
    <p>
    <label for="user_province">Provinsi:</label>
    <%= f.collection_select :province_id, Province.all(), 
      :id, :name, { prompt: "Provinsi" }, class: "form-control" %> 
    </p>
    <p>
    <label for="user_status">Status:</label>
    <%= f.collection_select :status_id, Status.all(), 
      :id, :name, { prompt: "Status" }, class: "form-control" %> 
    </p>
    <p>
    <label for="user_school">Sekolah/Institusi:</label>
    <%= f.text_field :school, class: "form-control" %>
    </p>
    <%= f.submit "Ganti", class: "btn btn-default has-shade" %>
  <% end %>
</div>

- if can? :manage, @user
  %p Nama lengkap: #{@user.fullname}
  %p Email: #{@user.email}

%p Provinsi: #{@user.province}
%p Status: #{@user.status}
%p sekolah/Institusi: #{@user.school}

- if can? :edit @user
  = link_to 'Edit Profil', edit_user_path, class: 'btn btn-default has-shade',
    type: 'button'
- elsif @useer == current_user
  = render 'mini_edit'

%p Poin: #{@user.point}

- if @user == current_user
  = link_to 'Pasar', market_items_path, class: 'btn btn-default has-shade'

<div class="container form">
  <div class="row">
    <div class="col-xs-10 col-sm-8 col-md-6" id="login">
      <header>
        <div class="login-logo">
          <%= link_to image_tag("logo.png", :alt => "Logo KTOM"),
            root_path %>
      </div>
      <div class="login-text">
        <div class="h1">Masuk</div>
        <div class="wrong-form">Belum punya akun? <a href="#to-register">
            Daftar.</a></div>
      </div>
      <div class="clearfix"></div>
      </header>
      <%= form_for :session, url: login_path,
        html: { :id => "login-form" } do |s| %>
        <div class="form-group has-feedback"><%= s.text_field :username,
          class: "form-control", placeholder: "Username/Email" %><span
             class="glyphicon form-control-feedback"
             aria-hidden="true"></span></div>
        <div class="form-group has-feedback"><%= s.password_field :password,
          class: "form-control", placeholder: "Password" %><span
             class="glyphicon form-control-feedback"
             aria-hidden="true"></span></div>
        <footer>
          <div class="checkbox">
            <label>
              <%= check_box_tag(:remember) %>
              Ingat saya
            </label>
          </div>
          <%= s.submit "Masuk", class: "btn-lg btn-default btn-login" %>
        </footer>
      <% end %>
    </div>
  </div>
</div>

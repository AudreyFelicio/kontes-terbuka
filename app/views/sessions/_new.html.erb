<div class="container form">
  <div class="row">
    <div class="col-xs-10 col-sm-8 col-md-6" id="login">
      <header>
        <div class="login-logo">
          <%= link_to image_tag("logo.png", :alt => "Logo KTOM"),
            root_path %>
      </div>
      <div class="login-text">
        <div class="h1">Masuk</div>
        <div class="wrong-form">Belum punya akun?
          <a href="#register" data-right-form="register">Daftar.</a></div>
      </div>
      <div class="clearfix"></div>
      </header>
      <%= form_tag login_path,
        html: { :id => "login-form" } do  %>
        <div class="form-group has-feedback">
          <%= text_field_tag :username, params[:email], class: "form-control",
            placeholder: "Username/Email" %>
          <span class="glyphicon form-control-feedback" aria-hidden="true">
          </span>
        </div>
        <div class="form-group has-feedback">
          <%= password_field_tag :password, params[:password],
            class: "form-control", placeholder: "Password" %>
          <span class="glyphicon form-control-feedback" aria-hidden="true">
          </span>
        </div>
        <footer>
          <div class="left-footer">
            <p>
            <%= check_box_tag :remember_me, 1, params[:remember_me] %>
            <label>Ingat saya</label>
            </p>
            <a href="#">Lupa password Anda?</a>
          </div>
          <%= submit_tag "Masuk", class: "btn btn-lg btn-default
          btn-login has-shade" %>
      </footer>
    <% end %>
    </div>
  </div>
</div>

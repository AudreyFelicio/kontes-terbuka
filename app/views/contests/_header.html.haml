%header#contest-info
  %h1#contest-name
  %h3#subtitle
  %h3.update-regularly#time-remaining
  - if @contest.currently_in_contest?
    #contest-buttons
      = link_to 'Download soal', @contest.problem_pdf.url(:original, false),
        class: 'btn btn-lg'
      = link_to 'Lihat ulang aturan', new_contest_user_contest_path(@contest),
        class: 'btn btn-lg'

  %div
    - if can? :summary, @contest
      = link_to 'Ringkasan', summary_contest_path(@contest),
        class: 'btn btn-lg'

    - if can? :admin, @contest
      = link_to 'Administrasi', admin_contest_path(@contest),
        class: 'btn btn-lg'

    - if can? :assign_markers, @contest
      = link_to 'Bagi koreksian', marker_contest_path(@contest),
        class: 'btn btn-lg'

    - if can? :download_pdf, @contest
      = link_to 'Download soal', @contest.problem_pdf.url(:original, false),
        class: 'btn btn-lg'

    - if can? :download_marking_scheme, @contest
      = link_to 'Download Marking Scheme',
        @contest.marking_scheme.url(:original, false), class: 'btn btn-lg'

    - if can? :download_reports, @contest
      = link_to 'Download laporan',
        reports_contest_path(@contest), class: 'btn btn-lg'

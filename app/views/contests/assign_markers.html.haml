.container
  %h1 Pembagian Koreksi #{@contest.name}
  - @long_problems.each do |lp|
    %h2 No. #{lp.problem_no}

    %table.table
      %thead
        %tr
          %th Username
          %th

      %tbody
        - User.with_role(:marker, lp).each do |u|
          %tr
            %td= u
            %td= link_to 'Hapus',
              remove_marker_path(long_problem_id: lp, user_id: u),
              method: :delete

    = form_tag create_marker_path, method: :post, class: 'form-inline' do
      = select_tag 'username', panitia_options(lp), class: 'form-control'
      = hidden_field_tag :long_problem_id, lp.id
      = submit_tag 'Tambah korektor', class: 'btn btn-default has-shade'

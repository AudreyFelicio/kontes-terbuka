<%= content_tag 'div', '', id: 'rules-contest-data', data: {
  contest: @contest,
  halsoal: image_tag('1hal1soal.png', alt: 'Penjelasan 1 soal di 1 halaman',
                   class: 'img-responsive').tr('"', "'")
} %>
<div class="container-fluid">
  <h1>Petunjuk Kontes</h1>

  <div id="rules-text">
    <%= markdown_render(@contest.rule).html_safe %>
  </div>

  <%= form_for @user_contest, url: accept_rules_contests_path do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :contest_id, value: @contest.id %>
    <div class="btn-center-container">
      <%= f.button "Saya sudah membaca dan menyetujui",
        class: "btn btn-default has-shade", id: 'rules-agree-btn' %>
  </div>
<% end %>
</div>

<article id="all-result">
  <h2>Leaderboard</h2>
  <div class="table-responsive">
    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th>Peringkat</th>
          <th>Username</th>
          <% if @contest.number_of_short_questions > 0 %>
            <th>Bagian A</th>
          <% end %>
          <% @contest.number_of_long_questions.times do |i| %>
            <th>Bagian B no. <%= i + 1 %></th>
          <% end %>
          <th>Total</th>
          <th>Penghargaan</th>
        </tr>
      </thead>
      <tbody>
        <% @user_contests.each do |uc| %>
          <% user = uc.user %>
          <tr>
            <td>1</td>
            <td><%= user.username %></td>
            <% if @contest.number_of_short_questions > 0 %>
              <td><%= uc.short_marks %></td>
            <% end %>
            <td>3</td>
            <td>7</td>
            <td>7</td>
            <td>0</td>
            <td>19</td>
            <td>Emas</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</article>

%section
  %h2 Esai
  %table.table
    %tr
      %th No
      %th Statement
      %th Edit
      %th Delete

    - @long_problems.each do |lp|
      %tr
        %td= lp.problem_no
        %td= lp.statement
        %td= link_to 'Edit', [:edit, @contest, lp]
        %td= link_to 'Hapus', [@contest, lp], method: :delete, data: { confirm: 'Apakah Anda yakin?' }

%section
  %h3 Buat soal
  = form_for [@contest, @contest.long_problems.build], html: { class: 'form-horizontal' } do |f|
    .form-group
      = f.label :problem_no, class: 'col-sm-2'
      .col-sm-4
        = f.text_field :problem_no, class: 'form-control', autocomplete: 'off'
    .form-group
      = f.label :statement, class: 'col-sm-2'
      .col-sm-10
        = find_and_preserve do
          = f.text_area :statement, class: 'form-control'
    .form-group
      .col-sm-offset-2.col-sm-4
        = f.submit 'Buat soal', class: 'btn btn-default has-shade'

<!DOCTYPE html>
%html
  %head
    %title Hasil #{@contest}
    %link{ rel: 'stylesheet', href: 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity: 'sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin: 'anonymous' }
    = stylesheet_link_tag wicked_pdf_asset_base64('download_results_pdf')

    -# Adobe Typekit
    %script{ src: 'https://use.typekit.net/ieu7ith.js' }
    :javascript
      try{Typekit.load({async:true});}catch(e){}

  %body
    = image_tag wicked_pdf_asset_base64('logo-hires.png'), id: 'results-img'
    %table.table.table-bordered#contest-results-pdf
      %caption Hasil #{@contest}
      %thead
        %tr
          %th Peringkat
          %th Username
          - unless @no_short_probs
            %th Bagian A
          - @long_problems.each do |lp|
            %th Bagian B no. #{lp.problem_no}
          %th Total
          %th Penghargaan

      %tbody
        - @user_contests.each do |uc|
          - user = uc.user
          %tr{ class: row_classes(user, [uc.award.downcase]) }
            %td= uc.rank
            %td= user.username
            - unless @no_short_probs
              %td= uc.short_mark
            - @long_problems.each do |lp|
              %td= score(uc, lp)
            %td= uc.total_mark
            %td= uc.award

%h2 Edit

= form_for :contest, url: contest_path(@contest), method: :patch do |f|
  = f.label :name, 'Nama kontes'
  = f.text_field :name, class: 'form-control'
  = f.label :start_time, 'Waktu mulai kontes'
  = f.datetime_field :start_time, class: 'form-control'
  = f.label :end_time, 'Waktu selesai kontes'
  = f.datetime_field :end_time, class: 'form-control'
  = f.label :result_time, 'Hasil kontes diumumkan'
  = f.datetime_field :result_time, class: 'form-control'
  = f.label :feedback_time, 'Terakhir kumpul feedback'
  = f.datetime_field :feedback_time, class: 'form-control'
  = f.label :marking_scheme, 'Marking Scheme'
  = f.file_field :marking_scheme, class: 'form-control'
  = f.submit class: 'btn btn-default has-shade'
